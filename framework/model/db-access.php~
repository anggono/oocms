<?php

class DBAccess {
	private $usr = "root";
	private $pwd = "whitemouse";
	private $host = "localhost";
	private $db = "blog";

	public function connect() {
		$cid = mysql_connect($this->host, $this->usr, $this->pwd);
		mysql_select_db($this->db);
		if (!$cid) {
			echo("ERROR: " . mysql_error());
			exit();
		}
	}
}

?>
